# Base editorconfig for new projects

root = true

[*]
end_of_line = lf
indent_style = space
tab_width = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.js,*.coffee}]
indent_style = space
indent_size = 2

[*.cson]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
